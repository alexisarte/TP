{
3) Realice un programa en el que 3 robots realicen escaleras de 4 escalones, en las que el
tamaño de cada escalón se incrementa en un 1 respecto al escalón anterior. El primer
escalón será de 1x1, el segundo de 2x2, y así sucesivamente.Al finalizar el recorrido, cada robot debe informar la cantidad de escalones en los que la cantidad de papeles superó en 1 a la cantidad de flores. Durante el recorrido, no se debe modificar el contenido de las esquinas
}

programa Ejercicio3
procesos

  proceso izquierda
  comenzar 
    repetir 3
      derecha
  fin
  
  proceso contarPapeles(ES papeles: numero)      
  variables
    aux: numero
  comenzar
    aux:= 0
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      aux:= aux + 1
    papeles:= papeles + aux
    repetir aux
      depositarPapel
  fin
  
  proceso contarFlores(ES flores: numero)
  variables
    aux: numero
  comenzar
    aux:= 0
    mientras (HayFlorEnLaEsquina)
      tomarFlor 
      aux:= aux + 1
    flores:= flores + aux
    repetir aux 
      depositarFlor
  fin
 
  proceso escalon (E altura: numero; E long: numero; ES escalones: numero )
  variables
    flores, papeles: numero
  comenzar   
    flores:= 0
    papeles:= 0
    repetir altura
      contarPapeles(papeles)
      contarFlores(flores)
      mover
    contarPapeles(papeles)
    contarFlores(flores)
    derecha  
    repetir long    
      mover
      contarPapeles(papeles)
      contarFlores(flores)
    izquierda
    si((papeles - 1) = flores)
      escalones:= escalones + 1
  fin

areas
  ciudad: AreaC(1,1,100,100)
  
robots 
  robot tipo1
  variables
    escalones, altura, long: numero
  comenzar
    escalones:= 0
    altura:= 1
    long:= 1
    repetir 4
      escalon(altura, long, escalones)
      altura:= altura + 1
      long:= long + 1
    Informar(escalones)
  fin    

variables
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
comenzar
  AsignarArea(robot1, ciudad)
  AsignarArea(robot2, ciudad)
  AsignarArea(robot3, ciudad)
  Iniciar(robot1, 12,14)
  Iniciar(robot2, 17,10)
  Iniciar(robot3, 22,6)
fin      
    
  
  
  
  
  
  
  
  
  
  
  


